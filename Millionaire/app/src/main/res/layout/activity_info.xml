<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityInfo">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="177dp"
        android:layout_height="180dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="117dp"
        android:background="#00F2F2F2"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_removebg_preview" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="175dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="87dp"
        android:fontFamily="sans-serif-medium"
        android:lines="15"
        android:text="Toplam 15 soruya doğru cevap vererek tam 1 Milyon TL kazanabilirsin. Takıldığın zaman kullanmak için 3 joker hakkın var, bunlar;   Telefonla Sorma : Soruyu bir arkadaşına sorabilirsin. Arkadaşın emin olduğu cevabın yüzdesini sana söyleyecek.   Yarı Yarıya : Bu joker hakkı yanlış olan iki seçeneği silecek.   İzleyiciye Sorma : İzleyicilerin seçtiği cevap şıklarının yüzdesini görebilirsin."
        android:textAlignment="center"
        android:textColor="#FBF2F2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>